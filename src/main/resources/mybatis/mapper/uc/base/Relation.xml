<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sl.practice.mapper.base.RelationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sl.practice.enitity.base.Relation">
        <id column="id" property="id" />
        <result column="uesrname" property="uesrname" />
        <result column="is_state" property="isState" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, uesrname, is_state, create_time, update_time
    </sql>




    <insert id="insert" parameterType="com.sl.practice.enitity.base.Relation">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO relation (username, password, sub_num,login_state, status, create_time, update_time)
        VALUES (#{username}, #{password}, #{subNum},#{loginState},#{status},now(),now())
    </insert>

    <insert id="insertBatch"  parameterType="com.sl.practice.enitity.base.Relation">
        INSERT INTO relation ( <include refid="Base_Column_List" /> )
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (null,#{item.username},#{item.password},#{item.subNum},#{item.loginState},#{item.status},now(),now())
        </foreach>
    </insert>

   
    <update id="updateById" parameterType="com.sl.practice.enitity.base.Relation">
        UPDATE relation
        SET username = #{username},
          sub_num = #{subNum},
          tread = #{tread},
          status = #{status},
          update_time = now()
        WHERE id = #{id}
  </update>

    <update id="updateByIdSelective" parameterType="com.sl.practice.enitity.base.Relation">
        UPDATE relation
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="subNum != null">
                sub_num = #{subNum},
            </if>
            <if test="phoneNumber != null">
                phone_number = #{phoneNumber},
            </if>
            <if test="loginState != null">
                login_state = #{loginState},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            update_time = now()
        </set>
        WHERE id = #{id}
    </update>

    <select id="selectById" resultType="com.sl.practice.enitity.base.Relation">
        SELECT
        <include refid="Base_Column_List"/>
        FROM relation
        WHERE id = #{id}
    </select>

    <select id="selectBatchIds" resultType="com.sl.practice.enitity.base.Relation">
        SELECT
        <include refid="Base_Column_List"/>
        FROM relation
        WHERE id IN
        <foreach collection="ids" item="id" index="index" open="(" separator="," close=")">
            #{id}
        </foreach>
        ORDER BY  id ASC
    </select>

    <delete id="deleteById">
        DELETE FROM relation
        WHERE id = #{id}
    </delete>

    <delete id="deleteBatchIds">
        DELETE FROM relation
        WHERE id IN
        <foreach collection="ids" item="id" index="index" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
